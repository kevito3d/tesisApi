                        </div> -->
                    </div>
                </div>
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <!-- <th>
                                <span class="custom-checkbox">
                                    <input type="checkbox" id="selectAll">
                                    <label for="selectAll"></label>
                                </span>
                            </th> -->
                            <th>Cedula</th>
                            <th>Planta</th>
                            <th>Provincia</th>
                            <th>Canton</th>
                            <th>Locatidad</th>
                            <!-- <th>Lugar Comun</th> -->
                            <th >Actions</th>
                        </tr>
                    </thead>
                    <tbody id="tableBody">
                        <% for( let index=0; index < observations.length; index++ ) { %>
                            <tr id=<%= observations[index].id %>>
                               
                                <td><%= observations[index].ci %></td>
                                <td><%=observations[index].scientificname%></td>
                                 <td><%=observations[index].canton.province.name %></td>
                                <td><%= observations[index].canton.name %></td>
                                
                                <td><%= observations[index].locality %></td>
                                
                                <td style="display: flex; justify-content: center;">
                                    <a href="/observation/edit/<%= observations[index].id %>" id="btnEdit"   class="edit" ><i style = "color:burlywood;"
                                            class="material-icons" data-toggle="tooltip"
                                            title="Edit">&#xE254;</i></a>
                                   
                                </td>
                            </tr>

                            <% } %>


                    </tbody>
                </table>
                <div class="clearfix">
                    <div id="countObservations" class="hint-text">Mostrando <b><%= observations.length %></b> de <b><%= count %></b> usuarios
                    
                    
                    </div>
                        
                    <ul class="d-flex justify-content-end">
                        <% if(pages > 0) { %> <!-- show pagination if there is pages -->
                            <nav class="">
                                <ul class="pagination">
                                <!-- FIRST ITEM -->
                                <% if(current == 1) { %>
                                    <li class="page-item disabled">
                                    <a class="page-link" href="#">Primero</a>
                                    </li>
                                <% } else { %>
                                    <li class="page-item">
                                    <a class="page-link" href="/user/1">Primero</a>
                                    </li>
                                <% } %>
                                <!-- ITEMS  -->
                                <% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %>
                                <% if(i !== 1) { %>
                                    <li class="page-item disabled">
                                    <a class="page-link" href="#">...</a>
                                    </li>
                                <% } %>
                                <% for(; i <= (Number(current) + 4) && i <= pages; i++) { %>
                                    <% if(i == current) { %>
                                    <li class="page-item active">
                                        <a class="page-link" href="<%= i %>">
                                        <%= i %>
                                        </a>
                                    </li>
                                    <% } else { %>
                                    <li class="page-item">
                                        <a class="page-link" href="/user/<%= i %>">
                                        <%= i %>
                                        </a>
                                    </li>
                                    <% } %>
                                    <% if (i == Number(current) + 4 && i < pages) { %>
                                        <li class="page-item disabled">
                                        <a class="page-link" href="#">...</a>
                                        </li>
                                    <% } %>
                                <% } %>
                                <!-- LAST ITEM -->
                                <% if(current == pages) { %>
                                    <li class="page-item disabled">
                                    <a class="page-link" href="#">
                                        Ultimo
                                    </a>
                                    </li>
                                <% } else { %>
                                    <li class="page-item">
                                    <a class="page-link" href="/user/<%= pages %>">
                                        Ultimo
                                    </a>
                                    </li>
                                <% } %>
                                </ul>
                            </nav>
                            <% } %>
                    </ul>
                </div>
        </div>
    </div>
