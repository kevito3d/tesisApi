      let cantonsOptions;
      if (msg.length <= 0) {
        cantonsOptions = '<option value="0">Sin padre</option>'
      } else {
        $.each(msg.cantons, function(i, canton) {
          cantonsOptions += '<option value=' + canton.id + '>' + canton.name +
            '</option>';
        });
      }
      $('#canton').html(cantonsOptions);
    });
  });
